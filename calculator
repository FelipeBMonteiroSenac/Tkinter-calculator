import tkinter as tk

# importa tkinter

def button_press(num):
    # adiciona o caractere pressionado à expressão
    global equaltion_text
    equaltion_text += str(num)
    equation_label.set(equaltion_text)

def equals():
    # avalia a expressão atual e mostra o resultado
    global equaltion_text
    try:
        # substitui 'x' por '*' para multiplicação
        expr = equaltion_text.replace('x', '*')
        total = str(eval(expr))
        equation_label.set(total)
        equaltion_text = total
    except ZeroDivisionError:
        # trata divisão por zero
        equation_label.set('Arithmetic Error!')
        equaltion_text = ''
    except Exception:
        # trata outros erros (ex: sintaxe inválida)
        equation_label.set('Error')
        equaltion_text = ''

def clear():
    # limpa a expressão e a tela
    global equaltion_text
    equation_label.set('')
    equaltion_text = ""

# configura a janela principal
screen = tk.Tk()
screen.title('GUI Calculator')
screen.geometry('500x530')

# variáveis de estado
equaltion_text = ""
equation_label = tk.StringVar()

# rótulo que funciona como tela da calculadora
label = tk.Label(screen, textvariable=equation_label, font=25, bg='white', width=30, height=3)
label.pack()

# frame para os botões
frame = tk.Frame(screen)
frame.pack()

# definição dos botões (texto, linha, coluna)
buttons = [
    ('1', 0, 0), ('2', 0, 1), ('3', 0, 2), ('x', 0, 3),
    ('4', 1, 0), ('5', 1, 1), ('6', 1, 2), ('+', 1, 3),
    ('7', 2, 0), ('8', 2, 1), ('9', 2, 2), ('-', 2, 3),
    ('.', 3, 0), ('0', 3, 1), ('/', 3, 2), ('=', 3, 3)
]

for (text, row, col) in buttons:
    # lambda com parâmetro padrão para evitar late-binding
    command = lambda x=text: button_press(x) if x != '=' else equals()
    tk.Button(frame, text=text, font=20, width=10, height=4, command=command).grid(row=row, column=col)

# botão para limpar tudo
clear_button = tk.Button(screen, text='Clear', font=20, width=15, height=2, command=clear)
clear_button.pack()

# inicia o loop da GUI
screen.mainloop()
